<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/activity_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".activities.ActivityMain">

    <include android:id="@+id/mainToolbar"
             layout="@layout/toolbar"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"
        android:layout_below="@+id/mainToolbar"
        android:layout_above="@+id/bottom_navigation">

    </FrameLayout>

    <com.roughike.bottombar.BottomBar
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        app:bb_tabXmlResource="@xml/bottombar_color_changing_tabs"
        app:bb_behavior="shifting|underNavbar"
        app:bb_showShadow="true"
        app:bb_badgeBackgroundColor="@color/card_red" />
</RelativeLayout>